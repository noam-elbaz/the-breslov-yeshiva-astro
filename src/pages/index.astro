									<template x-for="schedule in schedules">
										<li
											class="grid grid-cols-6 lg:grid-cols-5 border-b border-white/50">
											<div
												x-text="schedule.title"
												:class="schedule.title ? 'text-2xl font-bold col-span-6 my-4' : 'hidden'"
											></div>
											<div
												x-text="schedule.time"
												:class="schedule.time ? 'py-2 font-bold col-span-2 lg:col-span-1 border-r border-white/50' : 'hidden'"
